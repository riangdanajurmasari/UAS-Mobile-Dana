<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="61.8dp"
            android:textAlignment="center"
            android:fontFamily="@font/crima"
            android:text="Sign Up"
            android:textColor="@color/pink_light"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/coolvetica"
            android:textSize="16sp"
            android:text="Name"
            android:textColor="@color/pink_light" />

        <EditText
            android:id="@+id/nameFillSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_form"
            android:fontFamily="@font/coolvetica_thin"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/pink_light"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:textSize="16sp"
            android:text="Email"

            android:textColor="@color/pink_light" />

        <EditText
            android:id="@+id/emailFillSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_form"
            android:fontFamily="@font/coolvetica_thin"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/pink_light"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:textSize="16sp"
            android:text="Password"

            android:textColor="@color/pink_light" />

        <EditText
            android:id="@+id/passwordFillSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_form"
            android:fontFamily="@font/coolvetica_thin"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/pink_light"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coolvetica"
                android:textSize="14sp"
                android:text="Already have an account?"
                android:textColor="@color/pink_light" />

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/coolvetica"
                android:textSize="14sp"
                android:text="Sign In"
                android:textColor="@color/pink"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="39dp"
        android:backgroundTint="@color/pink"
        android:text="Sign Up"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/coolvetica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>